[bar/main]
width = 100%
height = 26
radius = 1.0
fixed-center = true
monitor = eDP-1
underline-size = 2
bottom = true

background = ${colors.background}
foreground = ${colors.foreground}
border-size = 0
border-color = #131313

module-margin = 2

font-0 = "Ubuntu Mono:style=Regular:pixelsize=16;1"
font-1 = FontAwesome:pixelsize=13;1
font-2 = Symbola:pixelsize=13;1
modules-left = i3
modules-right = cpu memory volume battery xkeyboard date
modules-center = music

tray-position = right
tray-transparent = false
tray-background = ${colors.background}
tray-padding = 4

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
strip-wsnumbers = true
wrapping-scroll = false

label-mode-padding = 2
label-mode-foreground = ${colors.red}
label-mode-background = ${colors.background}

; focused = Active workspace on focused monitor
label-focused = %{T2}%name%%{T-}
label-focused-foreground = ${colors.foreground}
label-focused-background = ${colors.background}
label-focused-underline = ${colors.pink}
label-focused-padding = 1

; unfocused = Inactive workspace on any monitor
label-unfocused =%{T2}%name%%{T-} 
label-unfocused-padding = 1
label-unfocused-foreground = ${colors.foreground}

; visible = Active workspace on unfocused monitor
label-visible = %{T2}%name%%{T-}
label-visible-background = ${colors.background}
label-visible-foreground = ${colors.foreground}
label-visible-padding = 1

; urgent = Workspace with urgency hint set
label-urgent = %{T2}%icon%%{T-}
label-urgent-background = ${colors.background}
label-urgent-foreground = ${colors.foreground}
label-urgent-padding = 1

